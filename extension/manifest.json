{
  "manifest_version": 3,
  "name": "HypnoDetect",
  "version": "1.0",
  "description": "Analyze AI-generated text for hypnosis or influence patterns.",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:5000/*"]
}
